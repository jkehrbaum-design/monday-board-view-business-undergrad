// /.netlify/functions/env  – prüft, ob der Token in der Function ankommt
exports.handler = async () => {
  const t = process.env.MONDAY_TOKEN || "";
  return {
    statusCode: 200,
    headers: { "Content-Type": "application/json", "Access-Control-Allow-Origin": "*" },
    body: JSON.stringify({
      hasToken: Boolean(t),
      approxLength: t ? t.length : 0,   // verrät NICHT den Token, nur die Länge
      startsWith: t ? t.slice(0, 3) : "" // z.B. "eyJ"
    })
  };
};
